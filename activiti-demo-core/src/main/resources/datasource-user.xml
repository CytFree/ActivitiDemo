<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:contenx="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.2.xsd">

    <contenx:property-placeholder location="classpath:jdbc.properties"/>

    <bean id="dataSourceUser" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="url" value="${user.jdbc.url}"/>
        <property name="driverClassName" value="${jdbc.driver}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
        <property name="maxIdle" value="${jdbc.maxIdleTime}"/>
        <property name="initialSize" value="${jdbc.initialSize}"/>
        <property name="maxActive" value="${jdbc.maxActive}"/>
    </bean>

    <bean id="transactionManagerUser" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSourceUser"/>
    </bean>

    <bean id="sqlSessionFactoryUser" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSourceUser" />
        <property name="mapperLocations" value="classpath*:mybatis/user/*.xml" />
    </bean>

    <!-- 自动扫描mapper配置和dao映射，无需写mybatis-config.xml -->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.cyt.activiti.core.mapper.user"/>
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactoryUser"></property>
    </bean>
    <bean id="sqlSessionUser" class="org.mybatis.spring.SqlSessionTemplate">
        <constructor-arg index="0" ref="sqlSessionFactoryUser"></constructor-arg>
    </bean>
</beans>